    <TextView
        android:id="@+id/bloc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bname2"
        android:layout_alignStart="@+id/bname2"
        android:layout_below="@+id/bname2"
        android:layout_marginTop="59dp"
        android:text="Loc : Kurnool" />

    <TextView
        android:id="@+id/bphone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
