<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/heart"

        android:layout_below="@+id/brain"
        android:layout_alignLeft="@+id/skin"
        android:layout_alignStart="@+id/skin"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/brain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/brain"
        android:text=""

        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/heart"
        android:layout_alignStart="@+id/heart" />

    <Button
        android:id="@+id/skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/cream1"


        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/heart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/brain"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/brain"
        android:layout_toRightOf="@+id/brain"
        android:text="NEUROLOGIST"
        android:textColor="#ac865a"
        android:textStyle="italic"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skin"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textStyle="italic"
        android:textColor="#f42929"
        android:layout_marginBottom="15dp"
        android:text="CARDIOLOGIST"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="DERMATOLOGIST"
        android:textColor="#fef779e4"
        android:textSize="20dp"
        android:textStyle="italic"/>
</RelativeLayout>